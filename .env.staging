# ChMS Staging Environment Configuration

# Application
APP_NAME=ChurchAfrica-Staging
APP_ENV=staging
APP_KEY=base64:GENERATE_NEW_KEY_FOR_STAGING
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=https://staging.chms.app

# Database Configuration (Staging)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=chms_staging
DB_USERNAME=chms_user
DB_PASSWORD=SECURE_STAGING_PASSWORD

# Redis Configuration (Staging)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=SECURE_REDIS_PASSWORD

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.staging.chms.app

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Mail Configuration (using Mailtrap for staging)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@staging.chms.app
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (staging bucket)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=chms-staging-files
AWS_USE_PATH_STYLE_ENDPOINT=false

# Filesystem Configuration
FILESYSTEM_DISK=s3

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Sanctum (API Authentication)
SANCTUM_STATEFUL_DOMAINS=staging.chms.app
SANCTUM_GUARD=web

# Frontend URL
FRONTEND_URL=https://staging.chms.app

# Security Configuration
BCRYPT_ROUNDS=10
HASH_VERIFY=true

# Rate Limiting (more lenient for testing)
THROTTLE_REQUESTS=120
THROTTLE_DECAY_MINUTES=1

# Monitoring and Analytics
SENTRY_LARAVEL_DSN=your-staging-sentry-dsn
GOOGLE_ANALYTICS_ID=your-staging-ga-id

# Backup Configuration
BACKUP_DISK=s3
BACKUP_NOTIFICATION_MAIL=dev@chms.app

# SSL Configuration
FORCE_HTTPS=true
SECURE_COOKIES=true

# Performance Configuration
OPCACHE_ENABLE=true
OPCACHE_VALIDATE_TIMESTAMPS=true

# Feature Flags (more permissive for testing)
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false

# Third-party Integrations (staging credentials)
GOOGLE_CLIENT_ID=your-staging-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-staging-google-oauth-client-secret

# Monitoring
TELESCOPE_ENABLED=true
HORIZON_ENABLED=true

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 4 * * *"  # Daily at 4 AM
DB_BACKUP_RETENTION_DAYS=7
