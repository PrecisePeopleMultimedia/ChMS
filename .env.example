# ChMS Environment Configuration

# Application
APP_NAME=ChMS
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database (PostgreSQL via Docker Compose)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=chms_db
DB_USERNAME=postgres
DB_PASSWORD=your-password

# PostgreSQL connection string for MCP
DATABASE_URL=postgresql://postgres:your-password@postgres:5432/chms_db

# Laravel Backend
LARAVEL_APP_KEY=
LARAVEL_JWT_SECRET=

# Frontend Configuration
VITE_API_URL=http://localhost:8000/api
# No additional frontend environment variables needed for PostgreSQL

# Redis (for caching and queues)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Claude AI (for welcome messages)
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Development Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
