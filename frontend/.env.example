# ChMS Frontend Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_APP_URL=http://localhost:1811

# No additional frontend environment variables needed for PostgreSQL

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# App Configuration
VITE_APP_NAME=ChMS
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Africa-first Church Management System

# Development Configuration
VITE_DEV_PORT=1811
VITE_DEV_HOST=localhost

# Security Configuration (Development Only)
# Set to 'true' to enable test credentials pre-filling in development
VITE_ENABLE_TEST_CREDENTIALS=false

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_ANALYTICS=false

# Theme Configuration
VITE_DEFAULT_THEME=garnet-night
VITE_ENABLE_DARK_MODE=true

# Production Environment Variables (add to your deployment platform)
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_ENVIRONMENT=production
